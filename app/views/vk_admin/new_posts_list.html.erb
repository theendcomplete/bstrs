<div class="col-lg-8">
  <% if @new_posts.size == 0 %>
    <h3>Нет необработанных постов!</h3>
  <% else %>
    <div class="row">
      <h3>Новые посты:</h3>
    </div>
    <table class="table table-bordered">
      <thead>
      <tr>
        <!--      <th scope="col"></th>-->
        <th scope="col">Автор</th>
        <th scope="col">Ссылка</th>
        <th scope="co1">Одобрить</th>
        <th scope="co1">Удалить</th>
        <!--      <th scope="co1">Подписка</th>-->
        <!--      <th scope="co1"></th>-->
      </tr>
      </thead>
      <tbody>
      <% @new_posts.each do |p| %>
        <div class="row text-center">
          <tr>
            <td>  <%= p.user.name %> </td>
            <td>
              <%= link_to p.name, p.address %>
            </td>
            <td><%= link_to '<button class="btn btn-small btn-success">Одобрить</button>'.html_safe, post_approve_path(p) %></td>
            <td><%= link_to '<button class="btn btn-small btn-danger">Удалить</button>'.html_safe, post_delete_path(p) unless p.status == 1 %></td>
          </tr>
      <% end %>
      </div>
      </tbody>
    </table>
  <% end %>
</div>
