<div class="row justify-content-md-center">
  <h2>Вступить в группу</h2>
</div>
<div class="row justify-content-md-center">
  <%= form_tag({controller: "vk_admin", action: "follow_group"}, method: "post") do %>
    <%= label_tag(:q, "URL:") %>
    <%= text_field_tag(:q, nil, placeholder: 'Например, https://vk.com/theboosters') %>
    <%= submit_tag("Follow!") %>
  <% end %>
</div>
<div class="row justify-content-md-center">
  <h2>Отписаться от группы</h2>
</div>
<div class="row justify-content-md-center">
  <%= form_tag({controller: "vk_admin", action: "unfollow_group"}, method: "post") do %>
    <%= label_tag(:q, "URL:") %>
    <%= text_field_tag(:q, nil, placeholder: 'Например, https://vk.com/theboosters') %>
    <%= submit_tag("Leave!") %>
  <% end %>

</div>
