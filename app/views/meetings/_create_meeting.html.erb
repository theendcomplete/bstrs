<!--<div class="row justify-content-md-center">-->
<%= form_for @meeting, url: meetings_create_path, html: {method: :post, :class => "form-horizontal center"} do |f| %>
  <%#= f.label :name %>
  <!--    <%#= f.text_field :name %><br/>-->
  <div class="form-group row">
    <div class="col-md-1">
      <%= f.label "Тема:", class: "control-label h5" %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-md-2">
      <%= f.label "Ссылка:", class: "control-label h5" %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :address, class: "form-control" %>
    </div>
    <div class="col-md-1">
      <%= f.submit "Создать", class: "btn btn-default btn-primary" %>
    </div>
  </div>
<% end %>

